<?xml version="1.0"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<!-- 全部日志 -->
	<appender name="normal_log_file" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="encoding" value="UTF-8" />
		<param name="File" value="${log4j.path}/console.log" />
		<param name="DatePattern" value=".yyyyMMddHH" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyyMMddHHmmss} %p %c %t %m%n" />
		</layout>
	</appender>

	<!--微信支付日志-->
	<appender name="wxpay_file" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="${log4j.path}/wxpay.log" />
		<param name="Append" value="true" />
		<param name="DatePattern" value=".yyyy-MM-dd" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d [%t] %-5p %c - %m%n" />
		</layout>
	</appender>

	<!--控制层日志-->
	<appender name="api_file" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="${log4j.path}/api.log" />
		<param name="Append" value="true" />
		<param name="DatePattern" value=".yyyy-MM-dd" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d [%t] %-5p %c - %m%n" />
		</layout>
	</appender>

	<!--service层日志-->
	<appender name="service_file" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="${log4j.path}/service.log" />
		<param name="Append" value="true" />
		<param name="DatePattern" value=".yyyy-MM-dd" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d [%t] %-5p %c - %m%n" />
		</layout>
	</appender>

	<appender name="kafkaProducer_file" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="${log4j.path}/producer.log" />
		<param name="Append" value="true" />
		<param name="DatePattern" value=".yyyy-MM-dd" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d [%t] %-5p %c - %m%n" />
		</layout>
	</appender>

	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-4r [%t] %-5p %c %x - %m%n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="DEBUG" />
			<param name="LevelMax" value="DEBUG" />
		</filter>
	</appender>

	<logger name="com.ibatis" additivity="true">
		<level value="DEBUG" />
	</logger>

	<logger name="java.sql.Connection" additivity="true">
		<level value="DEBUG" />
	</logger>

	<logger name="java.sql.Statement" additivity="true">
		<level value="DEBUG" />
	</logger>

	<logger name="wxpay">
		<level value="${log4j.level}"/>
		<appender-ref ref="wxpay_file"/>
	</logger>

	<logger name="api">
		<level value="${log4j.level}"/>
		<appender-ref ref="api_file"/>
	</logger>

	<logger name="service">
		<level value="${log4j.level}"/>
		<appender-ref ref="service_file"/>
	</logger>

	<logger name="kafkaProducer">
		<level value="${log4j.level}"/>
		<appender-ref ref="kafkaProducer_file"/>
	</logger>

	<root>
		<level value="${log4j.level}"></level>
		<appender-ref ref="normal_log_file" />
		<appender-ref ref="console" />
	</root>

</log4j:configuration>
